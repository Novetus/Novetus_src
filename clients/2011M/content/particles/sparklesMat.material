
/////////////////////////////////////////////////////
// Material used for sparkles
/////////////////////////////////////////////////////
material sparkle/sparkleMatl
{
	technique
	{
		pass
		{
			lighting off
			depth_write off
			scene_blend src_alpha one 

			texture_unit
			{
				texture textures/sparkle.png
				colour_op add
				alpha_op_ex modulate src_diffuse src_texture
			}
		}
	}
}